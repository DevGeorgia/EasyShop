<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOne</item>
        <item name="colorPrimaryDark">@color/colorTwo</item>
        <item name="colorAccent">@color/colorThree</item>
    </style>

    <style name="StyleOne">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorOne</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTwo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTwo</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="StyleThree">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorThree</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="StyleFour">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorFour</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
